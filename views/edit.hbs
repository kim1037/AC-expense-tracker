<div class="d-flex flex-column align-items-center">
  <h3>Edit an expense</h3>
  <div class="my-3" style="width: 80%;">
    <form action="/expense/edit/{{record._id}}?_method=PUT" method="POST">
      <div class="mb-3 d-flex">
        <label for="numberType" class="input-group-text">Type*</label>
        <select name="type" class="form-select" id="numberType" value="{{record.type}}" required>
          <option value="income" {{selected record.type 'income'}}>Income</option>
          <option value="expense" {{selected record.type 'expense'}}>Expense</option>
        </select>
      </div>
      <div class="mb-3 d-flex">
        <label for="name" class="input-group-text">Name*</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          value="{{record.name}}"
        />
      </div>
      <div class="mb-3 d-flex">
        <label for="date" class="input-group-text">Date*</label>
        <input
          type="date"
          name="date"
          class="form-control"
          id="date"
          value="{{record.date}}"
        />
      </div>
      <div class="mb-3 d-flex">
        <label for="category" class="input-group-text">Category*</label>
        <select name="category" class="form-select" id="category" value="{{category.name}}" required>
          <option value="">Choose...</option>
          {{#each categories}}
            <option value="{{this._id}}" {{selected category.name this.name}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="mb-3 d-flex">
        <label for="amount" class="input-group-text">Amount*</label>
        <input
          type="number"
          id="amount"
          name="amount"
          class="form-control"
          min="1"
          value="{{record.amount}}"
        />
      </div>
      <div class="btn-control d-flex just-content-evenly">
        <button
          type="submit"
          class="btn btn-info mx-auto mt-3"
          style="width: 14rem;"
        >Edit</button>
        <a
          class="btn btn-dark mx-auto mt-3"
          style="width: 14rem"
          href="/"
        >Cancel</a>
      </div>

    </form>
  </div>
</div>