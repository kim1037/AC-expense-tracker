<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Expense Tracker</title>
    <link
      href="https://bootswatch.com/5/lux/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="icon"
      href="https://fontawesome.com/icons/circle-dollar-to-slot?f=sharp&s=solid"
      type="image/icon type"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid mx-4">
          <a class="navbar-brand" href="/"><i
              class="fa-sharp fa-solid fa-circle-dollar-to-slot"
            ></i>
            {{#if isAuthenticated}}{{user.name}}'s{{else}}My{{/if}} Expense Tracker</a>
          {{#if isAuthenticated}}
            <a
              class="btn btn-outline-primary"
              href="/users/logout"
              role="button"
            >Logout</a>
          {{else}}
            <a
              class="btn btn-outline-primary"
              href="/users/login"
              role="button"
            >Login</a>
          {{/if}}
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="main mx-auto" style="width: 70%; margin: 3% 0;">
        {{{body}}}
      </div>

    </div>
    <!-- bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/0261016bb2.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>