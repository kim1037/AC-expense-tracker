<div>
  <div class="row mb-3">
    <select name="category" class="form-select">
      <option selected>Category</option>
      <option value="1">食</option>
      <option value="2">衣</option>
      <option value="3">住</option>
      <option value="4">行</option>
      <option value="5">育</option>
      <option value="6">樂</option>
    </select>
  </div>
  <div class="mb-3">
    <div class="card border-0">
      <div class="card-body d-flex flex-column align-items-center">
        <h5 class="card-title fw-bold">Your Balance</h5>
        <h6 class="card-text fs-3 fw-bolder text-{{balanceColor}}">${{balance}}</h6>
        <div
          class="row py-2 shadow-sm border rounded-3 font-monospace"
          style="width: 70%;"
        >
          <div class="col border-end text-center">
            <h6>Income</h6>
            <h4 class="text-info">${{income}}</h4>
          </div>
          <div class="col text-center">
            <h6>Outcome</h6>
            <h4 class="text-danger">${{outcome}}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="card"><div class="card-body">
        <table class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th scope="col">Type</th>
              <th scope="col">Category</th>
              <th scope="col">Name</th>
              <th scope="col">Date</th>
              <th scope="col">Amount</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each finalRecords}}
              <tr>
                <td>{{this.type}}</td>
                <td><i class="{{this.icon}}"></i></td>
                <td>{{this.name}}</td>
                <td>{{this.date}}</td>
                <td>{{this.amount}}</td>
                <td><a href="/expense/edit" class="edit-icon"><i
                      class="fa-solid fa-pen-to-square"
                    ></i></a></td>
                <td>
                  <form action="/" method="POST" style="display: inline;">
                    <button type="submit" class="delete-icon">
                      <i class="fa-solid fa-trash-can"></i>
                    </button>
                  </form>
                </td>
              </tr>
            {{/each}}

